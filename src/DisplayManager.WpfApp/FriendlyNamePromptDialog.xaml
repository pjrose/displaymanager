<Window x:Class="DisplayManager.WpfApp.FriendlyNamePromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Friendly Name"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#FF2B2B2B"
        Foreground="White"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Pick a stored friendly name or type a new one to look up." FontSize="14" TextWrapping="Wrap" Margin="0,0,0,12" />

        <ComboBox Grid.Row="1" ItemsSource="{Binding FriendlyNames}" SelectedItem="{Binding SelectedName, Mode=TwoWay}"
                  Text="{Binding SelectedName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  IsEditable="True" MinWidth="280" Padding="4" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="Ok_Click" />
            <Button Content="Cancel" Width="80" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>
