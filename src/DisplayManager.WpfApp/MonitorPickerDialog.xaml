<Window x:Class="DisplayManager.WpfApp.MonitorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Monitor"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#FF2B2B2B"
        Foreground="White"
        ResizeMode="CanMinimize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Pick an alternate monitor to continue the operation." FontSize="14" TextWrapping="Wrap" Margin="0,0,0,12" />

        <DockPanel Grid.Row="1">
            <ListBox x:Name="MonitorList" ItemsSource="{Binding Monitors}" SelectedItem="{Binding SelectedMonitor, Mode=TwoWay}"
                     MinWidth="320" MinHeight="200" DisplayMemberPath="DisplayName" />
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical" Margin="12,0,0,0">
                <Button Content="Select" Width="90" Margin="0,0,0,8" Click="Select_Click" />
                <Button Content="Cancel" Width="90" Click="Cancel_Click" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
