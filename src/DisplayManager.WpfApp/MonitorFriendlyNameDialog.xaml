<Window x:Class="DisplayManager.WpfApp.MonitorFriendlyNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Friendly Name"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#FF2B2B2B"
        Foreground="White"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Assign a friendly label to this monitor." FontSize="16" FontWeight="Bold" />
            <TextBlock Text="Friendly names are stored locally so you can reference monitors without memorising hardware IDs." TextWrapping="Wrap" Opacity="0.8" />
        </StackPanel>

        <Border Grid.Row="1" Background="#FF1F1F1F" CornerRadius="6" Padding="12" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="{Binding Monitor.DisplayName}" FontWeight="SemiBold" FontSize="14" />
                <TextBlock Text="{Binding Monitor.Info.DeviceName}" Margin="0,2,0,0" />
                <TextBlock Text="{Binding Monitor.Info.DevicePath}" FontSize="12" Opacity="0.7" TextWrapping="Wrap" />
                <TextBlock Text="{Binding Monitor.BoundsDescription}" FontSize="12" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Friendly Name" Margin="0,0,0,4" />
            <TextBox Text="{Binding FriendlyName, UpdateSourceTrigger=PropertyChanged}" MinWidth="300" Padding="6" />
            <TextBlock Text="Leave empty to remove the stored name." FontSize="11" Opacity="0.6" Margin="0,4,0,8" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="80" Margin="0,0,8,0" Click="Save_Click" />
                <Button Content="Cancel" Width="80" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
