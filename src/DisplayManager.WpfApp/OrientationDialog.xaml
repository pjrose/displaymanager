<Window x:Class="DisplayManager.WpfApp.OrientationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Orientation"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#FF2B2B2B"
        Foreground="White"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Select the rotation to apply to the chosen display." Margin="0,0,0,12" />

        <StackPanel Grid.Row="1">
            <ComboBox ItemsSource="{Binding Orientations}" SelectedItem="{Binding SelectedOrientation}" MinWidth="240" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Apply" Width="80" Margin="0,0,8,0" Click="Apply_Click" />
                <Button Content="Cancel" Width="80" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
